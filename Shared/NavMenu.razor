<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Menú</a>
    
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>

</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
   
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Inicio
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=> expandSubMenuRegistros= !expandSubMenuRegistros">
                <span class="oi oi-plus" aria-hidden="true"></span> Registros
            </NavLink>

            @if (expandSubMenuRegistros)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="RegistroCobros">
                            <span class="oi oi-credit-card" aria-hidden="true"></span> Registros Cobros
                        </NavLink>

                    </li>
                    
                </ul>

            }

        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" @onclick="()=> expandsubMenuConsulta= !expandsubMenuConsulta">
                <span class="oi oi-book" aria-hidden="true"></span> Consultas
            </NavLink>

            @if (expandsubMenuConsulta)
            {
                <ul class="nav flex-column">
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ConsultaClientes">
                            <span class="oi oi-people" aria-hidden="true"></span> Consulta Clientes
                        </NavLink>

                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ConsultaVentas">
                            <span class="oi oi-cart" aria-hidden="true"></span> Consulta Ventas
                        </NavLink>
                    </li>
                    <li class="nav-item px-3">
                        <NavLink class="nav-link" href="ConsultaCobros">
                            <span class="oi oi-credit-card" aria-hidden="true"></span> Consulta Cobros
                        </NavLink>
                    </li>
                </ul>

            }

        </li>


    </ul>

</div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubMenuRegistros;
    private bool expandsubMenuConsulta;


    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
